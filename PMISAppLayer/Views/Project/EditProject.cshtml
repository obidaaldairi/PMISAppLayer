@using PMISBLayer.Entities
@model Project

<form action="/Project/UpdateProject">

    @Html.HiddenFor(x => x.ProjectId)

    <div class="form-group">
        <label>Project Name</label>
        <input class="form-control" asp-for="ProjectName" />
    </div>

    <div class="form-group">
        <label>Project Amount</label>
        <input class="form-control" asp-for="ContractAmount" />
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input class="form-control" asp-for="StartDate" />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input class="form-control" asp-for="EndDate" />
    </div>

    <div class="form-group">
        <label>Select Project Status</label>
        <select name="ProjectStatusId" class="form-control">
            @{
                foreach (var ps in (List<ProjectStatus>)ViewBag.projectStatus)
                {
                    if (Model.ProjectStatusId == ps.ProjectStatusId)
                    {
                        <option selected value="@ps.ProjectStatusId">@ps.ProjectStatusName</option>
                    }
                    else
                    {
                        <option value="@ps.ProjectStatusId">@ps.ProjectStatusName</option>
                    }

                }
            }
        </select>
    </div>

    <div class="form-group">
        <label>Select Project Type</label>
        <select name="ProjectTypeId" class="form-control">
            @{
                foreach (var pt in (List<ProjectType>)ViewBag.projectType)
                {
                    if (Model.ProjectTypeId == pt.ProjectTypeId)
                    {
                        <option selected value="@pt.ProjectTypeId">@pt.ProjectTypeName</option>
                    }
                    else
                    {
                        <option value="@pt.ProjectTypeId">@pt.ProjectTypeName</option>
                    }

                }
            }
        </select>
    </div>

    <div class="form-group">
        <label>Select Client</label>
        <select name="ClientId" class="form-control">
            @{
                foreach (var c in (List<Client>)ViewBag.client)
                {
                    if (Model.ClientId == c.ClientId)
                    {
                        <option selected value="@c.ClientId">@c.ClientName</option>
                    }
                    else
                    {
                        <option value="@c.ClientId">@c.ClientName</option>
                    }

                }
            }
        </select>
    </div>

    <input class="btn btn-outline-primary btn-lg btn-block" type="submit" value="Update" />
    <a class="btn btn-outline-secondary btn-lg btn-block" href="/Project/Index">Back</a>
</form>
