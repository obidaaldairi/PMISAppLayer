@using PMISAppLayer
@using PMISBLayer.Entities
@using PMISBLayer.DTOs
@model InsertClientDTO

<form action="/Client/InsertClient">

    <div class="form-group">
        <label>Client Name</label>
        <input class="form-control" asp-for="ClientName">
        <span class="text-danger" asp-validation-for="ClientName"></span>
    </div>

    <div class="form-group">
        <label>Client Phone</label>
        <input class="form-control" asp-for="ClientPhone">
        <span class="text-danger" asp-validation-for="ClientPhone"></span>
    </div>

    <div class="form-group">
        <label>Client Email</label>
        <input class="form-control" asp-for="ClientEmail" type="email">
        <span class="text-danger" asp-validation-for="ClientEmail"></span>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input class="form-control" asp-for="Address">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Add</button>
    <a class="btn btn-outline-secondary btn-lg btn-block" href="/Client/Index">Back</a>
</form>





