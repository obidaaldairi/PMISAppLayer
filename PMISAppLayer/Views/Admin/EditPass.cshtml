@using PMISBLayer.Entities
@using PMISBLayer.DTOs
@model ProjectManager
<form action="/Admin/UpdatePass">
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <label>Old Password</label>
        <input class="form-control" name="OldPassword" type="password" />
    </div>

    <div class="form-group">
        <label>New Password</label>
        <input class="form-control" name="NewPassword" type="password" />
    </div>

    <input class="btn btn-outline-primary btn-lg btn-block" type="submit" value="Update" />
    <a class="btn btn-outline-secondary btn-lg btn-block" href="/Admin/Index">Back</a>
</form>
